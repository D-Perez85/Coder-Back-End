extends ./layout

block main
    - const estilo = "width:50%; height: 100px"; 
    h1(style="color:blue; text-align:center;")!= titulo
    div(style="width: 70%; margin:0 auto; text-align:center;")
        span=min 
        meter(value=nivel min=min max=max style=estilo)
        span=max
        ul
                li Pegar lo siguiente al final del path: "?min=10&nivel=15&max=20&titulo=<i>Medidor</i>"
                li Se refleja el medidor de nivel (los paramentros viajan por query)
